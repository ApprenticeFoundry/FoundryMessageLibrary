<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!--<TargetFramework>netstandard2.1</TargetFramework>-->
    <TargetFramework>net7.0</TargetFramework>
        
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <Authors>Stephen Strong</Authors>
    <Company>Stephen Strong</Company>
    <Copyright>Copyright Â© 2020</Copyright>
    <AssemblyVersion>10.0.4</AssemblyVersion>
    <Version>10.0.4</Version>
    <IsPackable>true</IsPackable>
    <Nullable>disable</Nullable>
    <Title>Apprentice Foundry Message Library</Title>
    <RepositoryUrl>https://github.com/ApprenticeFoundry/FoundryRulesAndUnits</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageId>ApprenticeFoundryMessageLibrary</PackageId>
    <PlatformTarget>AnyCPU</PlatformTarget>

    <LangVersion>11.0</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>$(DefineConstants)</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>$(DefineConstants)</DefineConstants>
  </PropertyGroup>
    
  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="7.0.3" />
  </ItemGroup>

    
  <ItemGroup>
    <ProjectReference Include="..\FoundryRulesAndUnits\FoundryRulesAndUnits.csproj" />
  </ItemGroup>
</Project>
